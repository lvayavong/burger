<h1>Burgers!</h1>

<h2>Burgers that are not devoured!</h2>



<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> not devoured
  </div>

  <button type="submit">Add burger</button>
</form>
</div>

<hr>

<div class='container'>

  <div class="row">

    <div class="col-lg-5">
      <h2>Burgers ready</h2>

      <ul>
        {{#each burgers}} {{#unless devoured}}
        <li>
          <h4>{{burger_name}}</h4>
          <button class="change-state" data-id="{{id}}" data-state="{{devoured}}">
            Devour!
          </button>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-lg-2">

    </div>
    <div class="col-lg-5">
      <h2>Burgers Eaten</h2>

      <ul>
        {{#each burgers}} {{#if devoured}}
        <li>
          <h4>{{burger_name}}</h4>
          <button class="change-state" data-id="{{id}}" data-state="{{devoured}}">
            {{#if devoured}}Cook{{else}}Not!{{/if}}
          </button>
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>

  </div>

</div>

<script src="assets/js/logic.js"></script>

